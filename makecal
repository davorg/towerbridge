#!/usr/bin/perl

use strict;
use warnings;
use 5.010;

use JSON;
use Template;

use FindBin '$Bin';
use lib "$Bin/lib";

use TowerBridge;
use TowerBridge::Lift;

my $app = TowerBridge->new;

open my $ical_fh, '>', $app->ics_path or die $!;
print $ical_fh $app->ical->as_string;

open my $json_fh, '>', $app->json_path or die $!;
print $json_fh $app->simple_json;

$app->make_html;

